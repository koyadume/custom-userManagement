<?xml version="1.0" encoding="UTF-8"?>
<plugin:page xmlns="html5" xmlns:plugin="plugin" xmlns:c="core">
	<plugin:head>
		<script type="text/javascript" src="js/globalPermissions.js" context="global"></script>
	</plugin:head>
						
	<plugin:body>
		<c:if test="${not empty msg}">
			<p class="msg-container">
				<span class="fa fa-info-circle fa-lg" style="margin-left: 5px; margin-right: 5px; color: white;"></span>
				<c:out value="${msg.details}"/>
			</p>
		</c:if>
		
	    <div style="padding: 15px;">
	        <form name="userDetails" method="POST" action="saveUser">
	        	<fieldset>
					<legend>User information</legend>
	                <ul style="list-style: none;">
	                     <li>UID</li>
	                     <li>
	                     		<text property="uid" size="100" />
	                     </li>
	                     <li>Password</li>
	                     <li>
	                    		<password property="password" size="100" />
	                     </li>
	                     <li>First Name</li>
	                     <li>
	                          	<text property="firstName" size="100" />
	                     </li>
	                     <li>Last Name</li>
	                     <li>
	                          	<text property="lastName" size="100" />
	                     </li>
	                     <li>Email</li>
	                     <li>
	                          	<text property="email" size="100" />
	                     </li>
	                     <hidden property="id" />
	                </ul>
	        	</fieldset>
				
				<div style="text-align: right; margin-top: 20px;">
					<pButton class="pt-btn pseudo-submit-button" faClass="fa fa-save fa-lg" faStyle="font-size: 1.2em; padding-right: 6px;"> 
		  				<c:if test="${empty userDetails.id}">
							<c:out value="Create" />
						</c:if>
						<c:if test="${not empty userDetails.id}">
							<c:out value="Update" />
						</c:if>
		  			</pButton>
					<plugin:actionURL action="search" class="pt-btn" faClass="fa fa-close fa-lg" faStyle="font-size: 1.2em; padding-right: 6px;">
						<c:out value="Close" />
					</plugin:actionURL>
				</div>
            </form>
	    </div>
	</plugin:body>
</plugin:page>
